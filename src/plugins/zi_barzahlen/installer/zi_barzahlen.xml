    // define table constants
    define('TABLE_BARZAHLEN_TRANSACTIONS', DB_PREFIX.'_barzahlen_transactions');
    define('TABLE_BARZAHLEN_REFUNDS', DB_PREFIX.'_barzahlen_refunds');
    ]]>
    </phpcode>
    <order>1</order>
    <active>1</active>
  </code>

